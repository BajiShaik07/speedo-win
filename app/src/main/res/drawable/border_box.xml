<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#FFFFFF"/> <!-- White background, adjust as needed -->

    <!-- Rounded Corners -->
    <corners android:radius="16dp"/> <!-- Rounded corners, adjust as needed -->

    <!-- Border/Stroke -->
    <stroke
        android:width="2dp"
        android:color="#FF0000"/> <!-- Red border, adjust color as needed -->

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
